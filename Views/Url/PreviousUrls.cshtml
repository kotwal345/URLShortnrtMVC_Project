@model List<URLShortnerMVC_Project.Models.ShortUrl>
@{
    ViewData["Title"] = "My Shortened URLs";
}
<h2>My Shortened URLs</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Original URL</th>
            <th>Shortened URL</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var url in Model)
        {
            <tr>
                <td>@url.OriginalUrl</td>
                <td><a href="@url.ShortenedUrl" target="_blank">@url.ShortenedUrl</a></td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-primary mt-2">Back to Shortener</a>
