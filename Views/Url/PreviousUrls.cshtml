@model List<URLShortnerMVC_Project.Models.ShortUrl>
@{
    ViewData["Title"] = "My Shortened URLs";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4 rounded w-100" style="max-width: 800px;">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="text-secondary m-0">My Shortened URLs</h3>
                <form asp-action="Logout" asp-controller="Account" method="post">
                    <button type="submit" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </button>
                </form>
            </div>

            @if (Model != null && Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-center">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Original URL</th>
                                <th scope="col">Shortened URL</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var url in Model)
                            {
                                <tr>
                                    <td class="text-break">@url.OriginalUrl</td>
                                    <td>
                                        <a href="@url.ShortenedUrl" target="_blank">@url.ShortenedUrl</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">No URLs have been shortened yet.</div>
            }

            <div class="d-grid mt-4">
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> Back to Shortener
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}
